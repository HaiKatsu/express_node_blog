<body>
    <form action="/dashboard" method="GET">
        <button class="btn" type="submit" style="position: fixed; top: calc(500px + 20px); left: 75px;">
            <span style="font-weight: bold; font-size:30px">Manage posts</span>
        </button>
    </form>

    <form action="/dashboard/users" method="GET">
        <button class="btn" type="submit" style="position: fixed; top: calc(650px + 20px); left: 75px;">
            <span style="font-weight: bold; font-size:30px">Manage users</span>
        </button>
    </form>

    <h1 style="margin-bottom: 50px; margin-left:30px; font-weight:bold">Users</h1>
    <div style="border: 1px solid black; width: 80%; margin-left: 30px; height: 500px; border-radius: 15px; margin-bottom: 100px; overflow: auto;">
        <% users.forEach(user => { %>
            <div style="display: flex; align-items: center; justify-content: space-between; margin-left: 50px; margin-top: 25px;">
                <div style="display: flex; align-items: center;">
                    <p style="font-size: 20px; margin: 0; margin-right:50px;"><%= user.email %></p>
                    <form action="/users/update/:id" method="POST">
                    <input type="text" value="" name="password" placeholder="New password" style="margin-top: 5px; vertical-align: middle; flex-shrink: 0;">
                </div>
                
                <div>
                        <input type="text" value="<%= user.id %>" name="id" hidden>
                        <button type="submit" style="border-radius: 15px; width:30px; background-color:transparent; border: 0px">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path><polyline points="17 21 17 13 7 13 7 21"></polyline><polyline points="7 3 7 8 15 8"></polyline></svg>
                        </button>
                    <form action="/users/:id" method="POST">
                        <input type="text" value="<%= user.id %>" name="id" hidden>
                        <button type="submit" style="border-radius: 15px; width:30px; background-color:transparent; border: 0px">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="cursor: pointer; margin-right: 10px;">
                            <circle cx="12" cy="12" r="10"></circle>
                            <line x1="15" y1="9" x2="9" y2="15"></line>
                                <line x1="9" y1="9" x2="15" y2="15"></line>
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
        <% }); %>
    </div>
</body>